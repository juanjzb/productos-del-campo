---
export const prerender = true;
import "@styles/global.css";

import location from "@assets/icons/location.png";
import mail from "@assets/icons/mail.png";
import telephone from "@assets/icons/telephone.png";
import whatsapp from "@assets/icons/whatsapp.png";
import facebook from "@assets/icons/facebook.png";
import instagram from "@assets/icons/instagram.png";
import twitter from "@assets/icons/twitter.png";
import linkedin from "@assets/icons/linkedin.png";

const navItems = [
	{ label: "Inicio", href: "#inicio" },
	{ label: "Nosotros", href: "#nosotros" },
	{ label: "Catálogo", href: "#catalogo" },
	{ label: "Contacto", href: "#contacto" },
];
---

<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Productos del Campo</title>
		<link rel="icon" type="image/png" href="/productos-del-campo/logo.png" />
	</head>
	<body class="bg-white text-gray-800">
		<header id="header" class="w-full bg-green-700 text-white">
			<div
				class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center flex-wrap"
			>
				<div class="flex items-center space-x-3">
					<a href="#header">
						<img
							src="/productos-del-campo/logo.png"
							alt="Logo"
							class="h-10 w-10"
						/>
					</a>
				</div>
				<nav class="flex flex-wrap gap-4 mt-2 sm:mt-0">
					{
						navItems.map((item) => (
							<a href={item.href} class="hover:text-green-300 transition">
								{item.label}
							</a>
						))
					}
				</nav>
			</div>
		</header>

		<main class="w-full">
			<div class="max-w-7xl mx-auto p-6">
				<slot />
			</div>
		</main>

		<footer class="bg-green-800 text-white p-6 w-full">
			<div
				class="mx-auto max-w-7xl grid grid-cols-1 md:grid-cols-2 gap-4 items-start"
			>
				<div class="text-center md:text-left md:flex md:justify-center">
					<div>
						<h4 class="text-lg font-semibold mb-4">Información</h4>
						<Fragment>
							<img src=`${location.src}` class="inline h-4 w-4" />
							<p class="inline">
								Almacén Sony 3 1/2 c al oeste. Estelí
							</p></Fragment
						><br />
						<Fragment>
							<img src=`${mail.src}` class="inline h-4 w-4" />
							<p class="inline">
								<a href="mailto:zb.juanjose@gmail.com" target="_blank"
									>zb.juanjose@gmail.com</a
								>
							</p>
						</Fragment><br />
						<Fragment>
							<img src=`${telephone.src}` class="inline h-4 w-4" />
							<p class="inline">
								<a href="tel:+50585088302" target="_blank">Claro: 8508 8302</a> /
								<a href="tel:+50576889649" target="_blank">Tigo: 7688 9649</a>
							</p>
						</Fragment><br />

						<Fragment>
							<img src=`${whatsapp.src}` class="inline h-4 w-4" />
							<p class="inline">
								<a href="https://wa.me/+50585088302" target="_blank"
									>Claro: 8508 8302</a
								> /
								<a href="https://wa.me/+50576889649" target="_blank"
									>Tigo: 7688 9649</a
								>
							</p>
						</Fragment>
					</div>
				</div>

				<div class="text-center md:text-left md:flex md:justify-center">
					<div>
						<h4 class="text-lg font-semibold mb-4">Redes Sociales</h4>
						<div class="gap-1 flex justify-center">
							<a href="https://wa.me/+50585088302" target="_blank"
								><img src=`${facebook.src}` class="inline h-8 w-8" /></a
							><a href="https://wa.me/+50585088302" target="_blank"
								><img src=`${instagram.src}` class="inline h-8 w-8" /></a
							><a href="https://wa.me/+50585088302" target="_blank"
								><img src=`${twitter.src}` class="inline h-8 w-8" /></a
							><a href="https://wa.me/+50585088302" target="_blank"
								><img src=`${linkedin.src}` class="inline h-8 w-8" /></a
							>
						</div>

						<br />
					</div>
				</div>
			</div>
			<div class="mt-8 text-center">
				<p>
					&copy; 2025 <a href="#header">Productos del Campo</a> - Todos los derechos
					reservados.
				</p>
			</div>
		</footer>
	</body>
</html>
